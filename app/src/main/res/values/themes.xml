<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/SecondaryColorPrimary</item>
        <item name="android:colorBackground">@color/lightBack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/notificationColorRed</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="Theme.MyFancyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/lightBack</item>
    </style>

    <!-- Button loading theme -->
    <style name="ButtonLoadingTransparent">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="rb_animation_alpha">true</item>
        <item name="rb_animation_progress_color">@color/splashButtonBorder</item>
        <item name="rb_animation_progress_padding">8dp</item>
        <item name="rb_animation_progress_width">3dp</item>
        <item name="rb_animation_progress_style">circle</item>
        <item name="rb_animation_corner_radius">5dp</item>
        <item name="rb_animation_duration">500</item>
        <item name="rb_background_color">@android:color/transparent</item>
        <item name="rb_background_color_pressed">@color/splashButtonBorder</item>
        <item name="rb_corner_color">@color/splashButtonBorder</item>
        <item name="rb_corner_color_pressed">@color/splashButtonBorder</item>
        <item name="rb_corner_radius">5dp</item>
        <item name="rb_corner_width">2dp</item>
        <item name="rb_text_color">@color/colorAccentDark</item>
        <item name="rb_text_color_pressed">@color/splashButtonTextColor</item>
    </style>
    <style name="ButtonLoading">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="rb_animation_alpha">true</item>
        <item name="rb_animation_progress_color">@color/colorAccentDark</item>
        <item name="rb_animation_progress_padding">8dp</item>
        <item name="rb_animation_progress_width">3dp</item>
        <item name="rb_animation_progress_style">circle</item>
        <item name="rb_animation_corner_radius">8dp</item>
        <item name="rb_animation_duration">500</item>
        <item name="rb_background_color">@color/colorAccent</item>
        <item name="rb_background_color_pressed">@color/colorAccentDark</item>
        <item name="rb_corner_color">@color/colorAccentDark</item>
        <item name="rb_corner_color_pressed">@color/colorAccent</item>
        <item name="rb_corner_radius">8dp</item>
        <item name="rb_corner_width">0dp</item>
        <item name="rb_text_color">@color/lightBack</item>
        <item name="rb_text_color_pressed">@color/disable</item>
    </style>

    <!-- Text Input Style -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorAccentDark</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="placeholderTextColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeErrorColor">@color/notificationColorRed</item>
        <item name="errorTextAppearance">@style/ErrorTextStyle</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!-- Edit Text Error Theme -->
    <style name="ErrorTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/notificationColorRed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

