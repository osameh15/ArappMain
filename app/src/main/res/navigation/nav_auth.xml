<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/regLogFragment">

    <fragment
        android:id="@+id/regLogFragment"
        android:name="ir.arapp.arappmain.View.Fragments.RegLogFragment"
        android:label="fragment_reg_log"
        tools:layout="@layout/fragment_reg_log" >
        <action
            android:id="@+id/action_regLogFragment_to_registerPhoneFragment"
            app:destination="@id/registerPhoneFragment" />
        <action
            android:id="@+id/action_regLogFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ir.arapp.arappmain.View.Fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgetPassPhoneFragment"
            app:destination="@id/forgetPassPhoneFragment" />
        <action
            android:id="@+id/action_loginFragment_to_regLogFragment"
            app:destination="@id/regLogFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetPassPhoneFragment"
        android:name="ir.arapp.arappmain.View.Fragments.ForgetPassPhoneFragment"
        android:label="fragment_phone_forget_pass"
        tools:layout="@layout/fragment_phone_forget_pass" >
        <action
            android:id="@+id/action_forgetPassPhoneFragment_to_forgetPassValidateFragment"
            app:destination="@id/forgetPassValidateFragment" />
        <action
            android:id="@+id/action_forgetPassPhoneFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="ir.arapp.arappmain.View.Fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/registerValidateFragment"
        android:name="ir.arapp.arappmain.View.Fragments.RegisterValidateFragment"
        android:label="fragment_validate_register"
        tools:layout="@layout/fragment_validate_register" >
        <action
            android:id="@+id/action_registerValidateFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerPhoneFragment"
            app:popUpToInclusive="?android:attr/windowOverscan" />
        <action
            android:id="@+id/action_registerValidateFragment_to_registerPhoneFragment"
            app:destination="@id/registerPhoneFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetPassFragment"
        android:name="ir.arapp.arappmain.View.Fragments.ForgetPassFragment"
        android:label="fragment_forget_pass"
        tools:layout="@layout/fragment_forget_pass" />
    <fragment
        android:id="@+id/registerPhoneFragment"
        android:name="ir.arapp.arappmain.View.Fragments.RegisterPhoneFragment"
        android:label="fragment_phone_register"
        tools:layout="@layout/fragment_phone_register" >
        <action
            android:id="@+id/action_registerPhoneFragment_to_registerValidateFragment"
            app:destination="@id/registerValidateFragment" />
        <action
            android:id="@+id/action_registerPhoneFragment_to_regLogFragment"
            app:destination="@id/regLogFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetPassValidateFragment"
        android:name="ir.arapp.arappmain.View.Fragments.ForgetPassValidateFragment"
        android:label="fragment_validate_forget_pass"
        tools:layout="@layout/fragment_validate_forget_pass" >
        <action
            android:id="@+id/action_forgetPassValidateFragment_to_forgetPassFragment"
            app:destination="@id/forgetPassFragment"
            app:popUpTo="@id/forgetPassPhoneFragment"
            app:popUpToInclusive="?android:attr/windowOverscan" />
        <action
            android:id="@+id/action_forgetPassValidateFragment_to_forgetPassPhoneFragment"
            app:destination="@id/forgetPassPhoneFragment" />
    </fragment>
</navigation>