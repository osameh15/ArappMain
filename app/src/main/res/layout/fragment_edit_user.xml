<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.Fragments.EditUserFragment">
<!--    view model-->
    <data>
        <variable
            name="viewModel"
            type="ir.arapp.arappmain.viewmodel.EditUserViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightBack"
        android:layoutDirection="rtl">
<!--         Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/profileToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/Theme.MyFancyTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransans"
                    android:text="@string/edit_user"
                    android:textColor="@color/lightBack"
                    android:textSize="18sp" />
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
<!--        Edit User Profile panel-->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileToolbar"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/edit_user_text"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans_bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccentDark"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layoutDirection="locale"
                    android:gravity="center_vertical|start"
                    android:hint="@string/phone_number"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/DisableEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layoutDirection="locale"
                    android:gravity="center_vertical|start"
                    android:hint="@string/name">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:maxLength="48"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layoutDirection="locale"
                    android:gravity="center_vertical|start"
                    android:hint="@string/mail">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:maxLength="64"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layoutDirection="locale"
                    android:gravity="center_vertical|start"
                    app:counterEnabled="true"
                    app:counterMaxLength="400"
                    android:hint="@string/bio">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine|textCapSentences"
                        android:minLines="1"
                        android:maxLines="10"
                        android:ems="10"
                        android:imeOptions="actionDone"
                        android:text=""
                        android:maxLength="401"/>
                </com.google.android.material.textfield.TextInputLayout>
<!--                Separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/border_shadow"/>
<!--                Education Spinner-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/education"
                        android:textSize="14sp"
                        android:fontFamily="@font/iransans_bold"
                        android:textColor="@color/colorAccentDark"
                        android:drawablePadding="8dp"
                        app:drawableStartCompat="@drawable/ic_outline_school_24" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/spinner_background">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/educationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_arrow_drop_down_24"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/app_name"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
                </RelativeLayout>
<!--                Province Spinner-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/province"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans_bold"
                    android:textColor="@color/colorAccentDark"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/ic_outline_map_24" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/spinner_background">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/provinceSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/app_name"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
<!--                City Spinner-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/city"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans_bold"
                    android:textColor="@color/colorAccentDark"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/ic_outline_maps_home_work_24" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/spinner_background">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/citySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/app_name"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
<!--                Type of Services-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/type_of_service"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans_bold"
                    android:textColor="@color/colorAccentDark"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/ic_outline_person_pin_24" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/spinner_background">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/get_service"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/iransans_bold"
                        android:textColor="@color/colorAccentDark"/>
                </RelativeLayout>
<!--                Separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/border_shadow"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_profile_update"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/iransans_medium"
                    android:textColor="@color/disable"/>
                <com.marozzi.roundbutton.RoundButton
                    style="@style/ButtonLoading"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="@string/submit_info"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>