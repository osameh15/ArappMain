<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SettingFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightBack"
        android:layoutDirection="rtl">
<!--         Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/profileToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransans"
                    android:text="@string/setting"
                    android:textColor="@color/lightBack"
                    android:textSize="18sp" />
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
<!--        Setting panel-->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileToolbar"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layoutDirection="rtl">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/public_setting"
                            android:textSize="12sp"
                            android:fontFamily="@font/iransans_bold"
                            android:textColor="@color/colorPrimary"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/language"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginBottom="2dp"
                                android:text="@string/persian"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:text="@string/night_mode"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"
                                android:shadowColor="@color/colorAccent"
                                app:trackTint="@color/switch_track_selector"
                                app:thumbTint="@color/switch_thumb_selector"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/show_arapp_in_setting"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/check_update"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/clear_history"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/security"
                            android:textSize="12sp"
                            android:fontFamily="@font/iransans_bold"
                            android:textColor="@color/colorPrimary"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/change_password"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:text="@string/fingerprint"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"
                                android:shadowColor="@color/colorAccent"
                                app:trackTint="@color/switch_track_selector"
                                app:thumbTint="@color/switch_thumb_selector"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/two_step_verification"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"
                                tools:ignore="RelativeOverlap" />
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:textAlignment="center"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="@string/deactivate"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/disable"/>
                        </RelativeLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/other"
                            android:textSize="12sp"
                            android:fontFamily="@font/iransans_bold"
                            android:textColor="@color/colorPrimary"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/invite_friends"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/recently_changed"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/support"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/application_law"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/privacy"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/law"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/about_us"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/colorAccentDark"
                                tools:ignore="RelativeOverlap" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:textAlignment="center"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="@string/app_version"
                                android:textSize="12sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/disable"
                                tools:ignore="RelativeOverlap" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginTop="2dp"
                                android:text="@string/delete_account"
                                android:textSize="14sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/Red"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:layout_marginBottom="2dp"
                                android:text="@string/delete_account_text"
                                android:textSize="12sp"
                                android:fontFamily="@font/iransans_bold"
                                android:textColor="@color/notificationColorRed"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>