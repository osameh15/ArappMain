<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    app:cardElevation="3dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layoutDirection="rtl">
<!--    Notification panel-->
    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/foldingCell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:animationDuration="800"
        app:backSideColor="@color/transparent"
        app:additionalFlipsCount="3"
        app:cameraHeight="32">
<!--        When Flip notify-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/splashStartColor"
            android:visibility="gone">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/notificationImageContext"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:riv_mutate_background="false"
                app:riv_tile_mode="clamp"
                app:riv_oval="false"
                app:riv_corner_radius="10dp"
                android:src="@drawable/arapp_default"/>
            <TextView
                android:id="@+id/notificationTitleContext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:fontFamily="@font/iransans_bold"
                android:text="@string/app_name_persian"
                android:textColor="@color/colorAccentDark"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/notificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:fontFamily="@font/iransans_bold"
                android:text="@string/update"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/notificationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:fontFamily="@font/iransans_bold"
                android:text="@string/app_version"
                android:textColor="@color/notificationColorRed"
                android:textSize="13sp"/>
        </LinearLayout>
<!--        First display notify-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="visible">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/notificationImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                app:riv_mutate_background="false"
                app:riv_tile_mode="clamp"
                app:riv_oval="false"
                app:riv_corner_radius="8dp"
                android:src="@drawable/icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/notificationImage"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/notificationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/iransans_bold"
                    android:text="@string/app_name_persian"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/notificationSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="@font/iransans_bold"
                    android:text="@string/law"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </com.ramotion.foldingcell.FoldingCell>
</com.google.android.material.card.MaterialCardView>