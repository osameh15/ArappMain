<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragments.HomeFragment">
<!--    <data>
        <variable
            name="viewModel"
            type="ir.arapp.arappmain.viewmodel.LoginViewModel"/>
    </data>-->
<!--    Refresh layout-->
    <com.madapps.liquid.LiquidRefreshLayout
        android:id="@+id/liquidRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightBack"
        android:animateLayoutChanges="true"
        android:animationCache="false"
        app:AniBackColor="@color/colorPrimaryDark"
        app:AniForeColor="@color/lightBack"
        app:CircleSmaller="6">
<!--        Home Fragment-->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBack">
<!--        Search Toolbar panel-->
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/search_border"
                    android:gravity="center"
                    android:padding="1.5dp"
                    android:layoutDirection="rtl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.mancj.materialsearchbar.MaterialSearchBar
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="@style/SearchViewMaterial"
                        app:mt_hint="@string/search_hint"
                        app:mt_placeholder="@string/search_hint" />
                </LinearLayout>
<!--        Banner View-->
                <com.zhpan.bannerview.BannerViewPager
                    android:id="@+id/bannerView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    style="@style/BannerView"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/high_order_container"
                    app:layout_constraintTop_toBottomOf="@id/bannerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layoutDirection="rtl"
                        android:overScrollMode="never"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingTop="8dp"

                        tools:itemCount="12"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/services_item_layout"
                        android:id="@+id/recycler_view_high_order_services"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="30:19"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/home_fragment_middle_banner"
                    app:layout_constraintTop_toBottomOf="@id/high_order_container"
                    app:layout_constraintDimensionRatio="20:10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_fragment_services_by_category"
                    app:layout_constraintTop_toBottomOf="@id/home_fragment_middle_banner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="3:2"/>




            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.madapps.liquid.LiquidRefreshLayout>
</layout>