<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragments.LoginFragment">
<!--    view model-->
    <data>
        <variable
            name="viewModel"
            type="ir.arapp.arappmain.viewmodel.LoginViewModel"/>
    </data>
<!--        Login panel -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:background="@color/lightBack"
        android:layoutDirection="rtl">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/login_text"
                android:textSize="15sp"
                android:fontFamily="@font/iransans_bold"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/colorAccentDark"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layoutDirection="locale"
                android:gravity="center_vertical|start"
                android:hint="@string/phone_number">
            <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:text="@={viewModel.phone}"
                android:maxLength="11"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layoutDirection="rtl"
                android:gravity="center_vertical"
                android:hint="@string/password"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textAlignment="viewStart"
                    android:text="@={viewModel.password}"/>
            </com.google.android.material.textfield.TextInputLayout>
<!--             Forget password panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layoutDirection="rtl">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_password_text"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans_bold"
                    android:textColor="@color/colorAccentDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/forget_pass"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans_bold"
                    android:textColor="@color/colorAccent"
                    android:onClick="@{viewModel::forgetPassButton}"/>
            </LinearLayout>
            <com.marozzi.roundbutton.RoundButton
                style="@style/ButtonLoading"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/login"
                android:onClick="@{viewModel::onButtonClick}"/>
        </LinearLayout>
<!--         Sign up panel -->
        <LinearLayout
            android:id="@+id/signUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layoutDirection="rtl">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_login"
                android:textSize="14sp"
                android:fontFamily="@font/iransans"
                android:textColor="@color/colorAccentDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/sign_up"
                android:textSize="14sp"
                android:fontFamily="@font/iransans_bold"
                android:textColor="@color/colorAccent"
                android:onClick="@{viewModel::signUpButton}"/>
        </LinearLayout>
    </RelativeLayout>
</layout>