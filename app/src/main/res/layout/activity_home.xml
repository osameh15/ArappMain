<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Activities.HomeActivity">

        <!--         Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/homeToolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:theme="@style/Theme.MyFancyTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </com.google.android.material.appbar.MaterialToolbar>

<!--            fragment container-->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mainFragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_home"
            app:defaultNavHost="true"/>
<!--            Bottom Navigation-->
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/border_shadow"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"/>
        <nl.joery.animatedbottombar.AnimatedBottomBar
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layoutDirection="rtl"
            android:background="@color/white"
            app:abb_tabColor="@color/colorAccent"
            app:abb_tabColorSelected="@color/colorAccentDark"
            app:abb_tabColorDisabled="@color/disable"
            app:abb_textAppearance="@style/textAppearanceBottomNavigation"
            app:abb_rippleEnabled="true"
            app:abb_rippleColor="@color/colorAccentDark"
            app:abb_indicatorColor="@color/colorAccentDark"
            app:abb_indicatorAnimation="slide"
            app:abb_indicatorAppearance="round"
            app:abb_indicatorLocation="top"
            app:abb_animationDuration="600"
            app:abb_animationInterpolator="@android:anim/overshoot_interpolator"
            app:abb_selectedTabType="text"
            app:abb_indicatorMargin="16dp"
            app:abb_indicatorHeight="4dp"
            app:abb_badgeAnimation="scale"
            app:barrierDirection="top"
            app:abb_tabs="@menu/bottom_navigation"
            app:abb_selectedIndex="0"/>
<!--        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layoutDirection="rtl"
            android:background="@color/white"
            app:itemRippleColor="@color/colorAccentDark"
            app:itemTextColor="@color/colorAccentDark"
            app:itemIconTint="@color/colorAccentDark"
            app:itemTextAppearanceActive="@style/textAppearanceBottomNavigation"
            app:chainUseRtl="true"
            app:menu="@menu/bottom_navigation"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>