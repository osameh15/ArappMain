<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragments.ForgetPassFragment">
<!--    view model-->
    <data>
        <variable
            name="viewModel"
            type="ir.arapp.arappmain.viewmodel.ForgetPassViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:background="@color/lightBack"
        android:layoutDirection="rtl">
<!--         Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/forgetPassToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/Theme.MyFancyTheme"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightBack"
                    android:text="@string/forget_pass"
                    android:textSize="18sp"
                    android:fontFamily="@font/iransans"/>
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
<!--        Submit New Password panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/forget_pass_new_pass"
                android:textSize="15sp"
                android:fontFamily="@font/iransans_bold"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/colorAccentDark"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layoutDirection="rtl"
                android:gravity="center_vertical"
                android:hint="@string/password"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:text="@={viewModel.password}"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorAccentDark"
                    android:fontFamily="@font/iransans"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layoutDirection="rtl"
                android:gravity="center_vertical"
                android:hint="@string/confirm_password"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    android:text="@={viewModel.cnfPassword}"
                    android:textColor="@color/colorAccentDark"
                    android:fontFamily="@font/iransans"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.marozzi.roundbutton.RoundButton
                style="@style/ButtonLoading"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/login_arapp"
                android:onClick="@{()->viewModel.checkPassword()}"/>
        </LinearLayout>
    </RelativeLayout>

</layout>